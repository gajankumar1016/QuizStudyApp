<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.illinois.finalproject.ProblemDisplayImplementation.AddProblemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/problemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problem:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enterProblemPromptTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_as_either_text_or_image"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/problemEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Problem, Theorem, Prompt, etc."
                android:inputType="textPersonName" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture Photo" />

        </LinearLayout>

        <TextView
            android:id="@+id/answerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text=" Answer: (Optional)"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enterAnswerPromptTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer on quiz must match this exactly to be correct"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/answerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Answer"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/solutionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Solution:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enterSolutionPromptTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_as_either_text_or_image"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/solutionEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Solution, Proof, Response, etc."
                android:inputType="textPersonName" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture Photo" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
